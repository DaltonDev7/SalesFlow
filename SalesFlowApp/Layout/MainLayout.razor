@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />
<MudPopoverProvider />

<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="DrawerToggle" />
        D' Luis Parrillada
        <MudSpacer />
        @* <MudIconButton Icon="@Icons.Material.Filled.AccountBox" Color="Color.Inherit" /> *@
        <MudMenu Icon="@Icons.Material.Filled.AccountBox" Color="Color.Inherit"
                 AriaLabel="Open user menu"
                 AnchorOrigin="Origin.BottomCenter"
                 >
            <ChildContent>
                <MudMenuItem Label="Profile" />
                <MudMenuItem Label="Configuraciones" />
                <MudMenuItem Label="Cerrar sesión" />
            </ChildContent>
        </MudMenu>

    </MudAppBar>


    <MudDrawer @bind-Open="_drawerOpen">
        <NavMenu />
    </MudDrawer>

    <MudMainContent>
        @Body
    </MudMainContent>

</MudLayout>

@code{
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

}